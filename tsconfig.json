{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types"
    // "allowJs": true,
  },
  "exclude": [
    "node_modules"
  ]
}